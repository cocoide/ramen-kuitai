// 1 対 1 の自己関係
// https://www.prisma.io/docs/concepts/components/prisma-schema/relations/self-relations

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name       String?
  bio    String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role              Role @default(USER)
  accounts      Account[]
  sessions      Session[]
  bookmark RamenShop[] @relation("UserBookmarks")
  favorite Review[] @relation("UserFavorites")
  posts Review[]  @relation("UserPosts")
  
  followedBy User[] @relation("UserFollows")
  following User[] @relation("UserFollows")
}

model Review {
  id         String            @id @default(cuid())
  title      String            
  image  String?
  rating    Int?
  content  String?
  category Category[]
  
  shopId String?
  shop RamenShop? @relation(fields: [shopId],references: [id])
  
  authorId String?
  author  User? @relation("UserPosts",fields: [authorId], references: [id])
  
  favorited User[] @relation("UserFavorites")
  createdAt DateTime @default(now())
}

model RamenShop {
  id String  @id @default(cuid())
  name String @unique
  image  String?
  address String?
  description String?
  reviews Review[]
  bookmarkedBy User[] @relation("UserBookmarks")
  category Category[]
}

model Category{
  id String @id @default(cuid())
  name String @unique
  shops RamenShop[]
  reviews Review []
}

enum Role {
  USER
  ADMIN
}

model Account {
  id                 String  @id @default(cuid())
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?

  @@unique([provider, providerAccountId])
}
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}